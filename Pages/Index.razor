@page "/"
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager Navigation

<h3>Home Page</h3>
<div class="login-container">
    <div class="login-box admin" @onclick='() => NavigateToLogin("admin")'>
        <h4>Admin Login</h4>
    </div>
    <div class="login-box user" @onclick='() => NavigateToLogin("user")'>
        <h4>User Login</h4>
    </div>
</div>

@code {
    private void NavigateToLogin(string role)
    {
        Navigation.NavigateTo($"/login/{role}");
    }
}
